@{
    ViewData["Title"] = "Fin";
}

<style>
    h1{
        text-align: center;
        margin-top: 20px;
    }

    h2{
        color: whitesmoke;
    }

    .contenedor-padre{
        display: flex;
    }

    .contenedor-padre .mitad{
        width: 50%;
        text-align: center;
        font-size: 1.5rem;
    }

    .contenedor-padre .mitad p{
        margin-top: 100px;
        color: whitesmoke;
    }

    .contenedor-tabla{
        display: flex;
        justify-content: center;
    }

    .content-table {
        border-collapse: collapse;
        margin: 25px 0;
        font-size: 0.9em;
        min-width: 500px;
        border-radius: 5px 5px 0 0;
        overflow: hidden;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.15);
    }

    .content-table thead tr {
        background-color: #212529;
        color: #ffffff;
        text-align: left;
        font-weight: bold;
    }

    .content-table th,
    .content-table td {
        padding: 12px 15px;
    }

    .content-table tbody tr {
        border-bottom: 1px solid #dddddd;
    }

    .content-table tbody tr:nth-of-type(even) {
        background-color: whitesmoke;
    }

    .content-table tbody tr:last-of-type {
        border-bottom: 2px solid #212529;
    }

    .content-table tbody tr:hover {
        font-weight: bold;
        color: #212529;
    }
</style>

<h1>El juego termino!</h1>

<div class="contenedor-padre">
    <div class="mitad izquierda">
        <p>Nombre de usuario: @ViewBag.Usuario</p>
        <p>Cantidad de respuestas correctas: @ViewBag.CantidadPreguntasCorrectas</p>
        <p>Tu puntaje final: @ViewBag.Puntaje</p>
    </div>
    <div class="mitad">
        <h2>Top 10 Puntajes</h2>
        <div class="contenedor-tabla">
            <table class="content-table">
                <thead>
                <tr>
                    <th>Usuario</th>
                    <th>Puntaje</th>
                    <th>Cantidad de preguntas correctas</th>
                    <th>Fecha y hora</th>
                </tr>
                </thead>
                <tbody>
                @foreach(var item in ViewBag.ListaPuntajes){
                    <tr>
                        <th>@item.Username</th>
                        <th>@item.Puntaje</th>
                        <th>@item.CantCorrectas</th>
                        <th>@item.FechaHora</th>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div style="display: flex; justify-content: center; margin-top: 20px">
    <a href='@Url.Action("ConfigurarJuego")' class="btn">Volver a jugar</a>
</div>